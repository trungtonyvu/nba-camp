<% include ../partials/header %>


    <div class="row">
        <h1 style="text-align: center;">Edit Logo</h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="campground[name]" placeholder="Team Name" value="<%= campground.name %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="campground[valuation]" placeholder="Team Valuation" value="<%= campground.valuation %>" min="1000000" step="1"> <!--step - increments-->
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="campground[image]" placeholder="Team Image URL" value="<%= campground.image %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="campground[description]" placeholder="Team Description" value="<%= campground.description %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/campgrounds"><strong>Main Page</strong></a>
                    <br>
                <a href="/"><strong>Form Page</strong></a>
            </div>
    </div>


<% include ../partials/footer %>